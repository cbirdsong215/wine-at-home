<%= form_for [@tasting, @pairing] do |f| %>
<h1 style="text-center"><%= @tasting.name %></h1>
  <div class="row">
    <div class="small-10 small-center columns">
      <%= f.label :name, "Food Pairing" %>
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="row">
    <div class="small-10 small-center columns">
      <%= f.label :serving_suggestion, "Serving Suggestion" %>
      <%= f.text_field :serving_suggestion %>
    </div>
  </div>

    <div class="field">
      <%= f.hidden_field :tasting_id, value: @tasting.id %>
    </div>

    <div class="row">
      <div class="actions">
        <div class="small-10 small-center columns">
          <%= f.submit "Add Pairing" %>
        </div>
      </div>
    </div>
  <% end %>
